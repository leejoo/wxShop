.container {
  display: flex;
  flex-direction: column;
}
.main {
  display: flex;
  flex-direction: row;
  top:300rpx;
}
.sale-out {
  position:relative;
  top:-2.3em; 
	width: 66px;
  height: 40rpx;
	bottom: 0;
	background: #aaa;
	color: #fff;
	z-index: 2;
	text-align: center;
	border: 1px solid #ccc;
}
.main-right {
  height: 620rpx;
  margin-bottom: 100rpx;
}

.main-right-item {
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  padding: 10rpx;
  border-bottom: solid 1px #eee;
}

.main-right-item-photo {
  height: 130rpx;
  border: solid 1px #eee;
}

.main-right-item-photo image {
  width: 130rpx;
  height: 130rpx;
}

.main-right-item-detail {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 480rpx;
  margin-left: 10rpx;
}

.main-right-item-detail .name {
  font-size: 28rpx;
}

.main-right-item-detail .price {
  color: #df2f2f;
}

.main-right-item-detail .itemName {
  width: 480rpx;
  max-width: 480rpx;
  /* 控制显示的行数 */
  max-height: 150rpx;
  line-height: 40rpx;
  /* 显示多行 */
  display:-webkit-box; 
  overflow:hidden; 
  /* 5为显示的行数 */
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
	margin-bottom:15rpx;
	text-overflow: ellipsis;
}

.main-right-item-handle {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  width: 150rpx;
}

.main-right-item-handle .icon {
  width: 50rpx;
  height: 50rpx;
}

.main-right-item-handle .num {
  text-align: center;
}

.cart {
  width: 750rpx;
  position: fixed;
  bottom: 100rpx;
  background-color: #f5f5f5;
  transform: translateY(100%) scaleY(0);
  height: 0rpx;
  transition: 0.5s;
  opacity: 0;
}

.cart-show {
  opacity: 1;
  height: auto;
  transform: translateY(0) scaleY(1);
  z-index: 500;
}

.cart .cart-item {
  display: flex;
  flex-direction: row;
  height: 120rpx;
  width: 100%;
  align-items: center;
  border-bottom: 1rpx solid #fff;
}

.cart .cart-item .cart-item-left {
  height: 100rpx;
}

.cart .cart-item .cart-item-left image {
  width: 100rpx;
  height: 100rpx;
  margin-left: 10rpx;
}

.cart .cart-item .cart-item-center {
  display: flex;
  flex-direction: column;
  width: 500rpx;
  padding-left: 50rpx;
}

.footer {
  position: fixed;
  display: flex;
  flex-direction: row;
  bottom: 0rpx;
  height: 100rpx;
  background-color: #f4f4f4;
  width: 100%;
  align-items: center;
}

.footer .footer-left {
  margin-left: 50rpx;
}

.footer-left .tap {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 20rpx;
  background-color: #df2f2f;
  color: #fff;
  position: absolute;
  top: 10rpx;
  left: 80rpx;
}

.footer .footer-middle {
  font-size: 32rpx;
  margin-left: 50rpx;
}

.footer .footer-right {
  width: 250rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 350rpx;
  text-align: center;
  background-color: #df2f2f;
  color: #fff;
  font-size: 32rpx;
}

.footer .footer-left .icon {
  width: 50rpx;
  height: 50rpx;
}
