.container {
  display: flex;
  flex-direction: column;
}

.head{
  display: flex;
  flex-direction: row;
  height: 250rpx;
  border-bottom: 1rpx solid #f4f4f4;
	background-size:cover;

}

.head .shop{
   display: flex;
   flex-direction: column;
   justify-content: center;
   font-size: 28rpx;
}

.head .title{
   color:black;
   font-size:40rpx;
   font-family:'LiSu';
}

.head .desc{
   color:black;
}

.head .head-logo{
  width:100rpx;
  height:100rpx;
  margin: 50rpx 30rpx 50rpx 50rpx;
}

#title{
	font-size: 28rpx;
	margin: 30rpx 30rpx 10rpx 30rpx;
}
#items{
	display: flex;
	flex-wrap: wrap;
	width: 100%;
}
#items .index-item{
	width: 44%;
	margin: 3%;
	border-radius: 20rpx;
	text-align: center;
	font-size:25rpx; 
	color: #878787;
	box-shadow: 0rpx 0rpx 20rpx 2rpx #ccc;
}
.index-item image{
	width: 100%;
	height: 180rpx;
}
.index-item text{
	width: 44%;
	margin: 3%;
	border-radius: 20rpx;
	text-align: center;
	font-size:25rpx; 
	color: #878787;
	box-shadow: 0rpx 0rpx 20rpx 2rpx #ccc;
	overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
