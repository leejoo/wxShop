#banner,#banner swiper-item,#banner swiper-item image{
	width: 100%;
	height: 500rpx;
}
#title{
	font-size: 28rpx;
	margin: 30rpx 30rpx 10rpx 30rpx;
}
#items{
	display: flex;
	flex-wrap: wrap;
	width: 100%;
}
#items .index-item{
	width: 44%;
	margin: 3%;
	height: 250rpx;
	border-radius: 20rpx;
	text-align: center;
	font-size:25rpx; 
	color: #878787;
	box-shadow: 0rpx 0rpx 20rpx 2rpx #ccc;
}
.index-item image{
	width: 100%;
	height: 80%;
}
.index-item .itemName{
	width: 100%;
	height: 20%;
	overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
#index-bottom{
	width: 100%;
	height: 20rpx;
	text-align: center;
	font-size: 25rpx;
}
#index-bottom image{
	width: 70rpx;
	height: 70rpx;
	border-radius: 70rpx;
	box-shadow: 0rpx 0rpx 20rpx 2rpx #ccc;
	margin-bottom: 10rpx;
}
.link{
	color: green;
	text-decoration: underline;
}